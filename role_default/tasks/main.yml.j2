# Main entry point for the role.

---

- name: "Main | Include role initialization tasks"
  ansible.builtin.include_tasks:
    file: "{{ '{{' }} role_path {{ '}}' }}/tasks/init.yml"
    apply:
      tags:
        - "always"
        - "{{ role_name }}_always"
  tags:
    - "always"
    - "{{ role_name }}_always"


- name: "Main | Include setup tasks (install): default first, then best platform match (if any)"
  ansible.builtin.include_tasks:
    file: "{{ '{{' }} __{{ role_name }}_task_file {{ '}}' }}"
    apply:
      tags:
        - "{{ role_name }}_setup"
  loop: "{{ '{{' }} ['default.yml'] + __{{ role_name }}_platform_filenames_most_specific_first {{ '}}' }}"
  loop_control:
    index_var: "__{{ role_name }}_loop_index"
    loop_var: "__{{ role_name }}_loop_item"
  vars:
    __{{ role_name }}_task_file: "{{ '{{' }} role_path {{ '}}' }}/tasks/setup/install/{{ '{{' }} __{{ role_name }}_loop_item {{ '}}' }}"
  when:
    - {{ role_name }}_state == 'present'
    - __{{ role_name }}_task_file is file
    - __{{ role_name }}_loop_index <= 1
  tags:
    - "{{ role_name }}_setup"


